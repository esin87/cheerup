<div class="cheerup">
    <div class="edit-controls">
        {{#if currentUser}}
        <a href="users/likes/">add to favorites</a> |
        <a href="/users/edit">edit</a> |
        <form id="delete-link" action="/cheerups/{{cheerup._id}}?_method=delete" method="post">
            <input id="delete-link" type="submit" value="delete">
        </form>
        {{/if}}
    </div>
    <div>
        <span id="cheerup-text">{{cheerup.body}}</span>
    </div>
    <div class="a-button">
        <a href="/cheerups/show">show me another!</a>
    </div>

</div>